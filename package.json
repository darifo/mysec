{
  "name": "electron-desktop",
  "private": true,
  "version": "0.0.0",
  "author": {
    "email": "2248961461@qq.com",
    "name": "darifo",
    "url": "https://github.com/darifo"
  },
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:build": "rimraf dist && vite build && electron-builder",
    "build:mac": "rimraf dist && vite build && electron-builder --macos",
    "build:win": "rimraf dist && vite build && electron-builder --windows",
    "electron:icons": "electron-icon-builder --input=./src/assets/logo.png --output=./resource/"
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.0",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-icon-builder": "^2.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-electron": "^0.9.3",
    "vue-tsc": "^0.40.4"
  },
  "build": {
    "productName": "Mysec",
    "appId": "dev.darifo.mysec",
    "copyright": "Copyright Â© 2022 by darifo",
    "directories": {
      "output": "dist_electron"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resource/icons/win/icon.ico",
      "uninstallerIcon": "resource/icons/win/icon.ico",
      "installerHeaderIcon": "resource/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mysec",
      "runAfterFinish": false
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "resource/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "resource/icons/mac/icon.icns"
    }
  }
}
